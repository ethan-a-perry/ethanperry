---
import Link from "./Link.astro";
---

<footer class="content-grid">
    <div class="footer">
        <p>Ethan Perry Â© 2025</p>
        <nav>
            <ul>
                <li><Link href="/" classes="dark-standard">Home</Link></li>
                <li><Link href="/contact" classes="dark-standard">Contact</Link></li>
                <li><Link href="/sitemap" classes="dark-standard">Sitemap</Link></li>
            </ul>

            <ul class="socials">
                <li><Link href="https://linkedin.com/in/perry-ethan" target="_blank" rel="noopener noreferrer" classes="dark-standard" icon={{name: "linkedin", side: "left"}}></Link></li>
                <li><Link href="https://github.com/perry-ethan" target="_blank" rel="noopener noreferrer" classes="dark-standard" icon={{name: "github", side: "left"}}></Link></li>
                <li><Link href="https://goodreads.com/ethanperry" target="_blank" rel="noopener noreferrer" classes="dark-standard" icon={{name: "goodreads", side: "left"}}></Link></li>
            </ul>
        </nav>
    </div>
</footer>

<style>
    footer {
        padding-block: 2rem;
        margin-top: 20rem;

        background-color: var(--color-dark-background);
        color: #D4D4D4;
    }

    .footer {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        justify-content: space-between;
        gap: 1rem 2rem;
    }

    nav, ul {
        display: flex;
        align-items: center;
        gap: 1.5rem 2rem;
    }

    .socials {
        gap: 1rem;

        padding-left: 2rem;
        border-left: 1px solid currentColor;

        li {
            display: grid;
        }
    }

    @media (width < 768px) {
        .footer, nav {
            flex-direction: column;
            align-items: flex-start;
        }

        .socials {
            padding: unset;
            border-left: 0;
        }
    }
</style>