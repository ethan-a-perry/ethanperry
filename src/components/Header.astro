---
const currentPath = Astro.url.pathname;
---

<header class="content-grid">
    <nav class="breakout">
        <ul>
            <li><a href="/" aria-current={currentPath === "/" ? "page" : undefined}>Home</a></li>
            <li><a href="/projects" aria-current={currentPath.startsWith("/projects") ? "page" : undefined}>Projects</a></li>
            <li><a href="/writings" aria-current={currentPath.startsWith("/writings") ? "page" : undefined}>Writings</a></li>
            <li><a href="/">Reading</a></li>
            <li><a href="/work" aria-current={currentPath.startsWith("/work") ? "page" : undefined}>Work</a></li>
            <li><a href="/about" aria-current={currentPath.startsWith("/about") ? "page" : undefined}>About</a></li>
            <li><a href="/contact" aria-current={currentPath.startsWith("/contact") ? "page" : undefined}>Contact</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        position: sticky;
        top: 0;

        margin-bottom: 14rem;
        padding-block: 2rem;

        background: var(--color-site-background);
        z-index: 1;
    }

    nav ul {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    nav a[aria-current="page"] {
        cursor: default;
    }
</style>