---
import Base from '../layouts/Base.astro'
const pageTitle = "500 Error"
interface Props {
    error: unknown;
}

const { error } = Astro.props;
---
<Base pageTitle={pageTitle}>
    <section class="error">
        <h1>500 Error</h1>
        <a href="/" class="with-arrow right underline">Go home</a>
        <div>{error instanceof Error ? error.message : "Unknown error"}</div>
    </section>
</Base>