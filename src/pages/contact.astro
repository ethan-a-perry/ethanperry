---
import Base from '../layouts/Base.astro';
const pageTitle = "Contact"
---

<Base pageTitle={pageTitle}>
    <section>
        <div class="hero">
            <h1>Contact Information</h1>
            <p>Send me a message directly through any of my links or by using the form below. Thank you!</p>
            <ul class="hero-info">
                <li><a class="with-arrow right underline" href="/">ethan@ethanperry.net</a></li>
                <li><a class="with-arrow right underline" href="/">Instagram</a></li>
                <li><a class="with-arrow right underline" href="/">LinkedIn</a></li>
                <li><a class="with-arrow right underline" href="/">Github</a></li>
                <li><a class="with-arrow right underline" href="/">Goodreads</a></li>
            </ul>
        </div>

        <section class="contact-form">
            <h2>Send me a message</h2>
            <form>
                <div class="form-group">
                    <label for="name">Name*</label>
                    <input type="text" id="name" placeholder=" " required >
                </div>
                <div class="form-group">
                    <label for="company">Company Name</label>
                    <input type="text" id="company" placeholder=" " >
                </div>
                <div class="form-group">
                    <label for="email">Email*</label>
                    <input type="email" id="email" placeholder=" " required >
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="tel" id="phone" placeholder=" " >
                </div>
                <div class="form-group grid-span">
                    <label for="message">Message*</label>
                    <textarea id="message" placeholder=" " required />
                </div>
                <button class="grid-span">Send Message</button>
            </form>
        </section>

    </section>


</Base>